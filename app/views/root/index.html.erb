                      <p>
                        <strong><%= t('.status.overall_stats.protocols_not_entered')%>:</strong>
                        <%= stats[:protocols_not_entered][:number] %>
                        <% if stats[:protocols_not_entered][:number] != I18n.t('app.common.na') %>
                          (<%= stats[:protocols_not_entered][:percent] %>)
                        <% end %>
                      </p>
                    </div>
