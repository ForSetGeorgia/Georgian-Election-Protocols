              <tr>
                <td>more_ballots_than_votes_flag</td>
                <td><%= t('root.download.explanations.more_ballots_than_votes_flag') %></td>
              </tr>
              <tr>
                <td>more_ballots_than_votes</td>
                <td><%= t('root.download.explanations.more_ballots_than_votes') %></td>
              </tr>
              <tr>
                <td>more_votes_than_ballots_flag</td>
                <td><%= t('root.download.explanations.more_votes_than_ballots_flag') %></td>
              </tr>
              <tr>
                <td>more_votes_than_ballots</td>
                <td><%= t('root.download.explanations.more_votes_than_ballots') %></td>
              </tr>
              <tr>
                <td>amendments_flag</td>
                <td><%= t('root.download.explanations.amendments_flag') %></td>
              </tr>
              <tr>
                <td>amendment_count</td>
                <td><%= t('root.download.explanations.amendment_count') %></td>
              </tr>
              <tr>
                <td>is_annulled</td>
                <td><%= t('root.download.explanations.is_annulled') %></td>
              </tr>
            </tbody>
          </table>
        </div>


      </div>
    </div>


  <% elsif @elections_coming_up.present? %>

    <div class="row-fluid elections-coming-up">
      <div class="span6">
        <%= link_to(image_tag('share_2016.png'), @bitly_url, target: :blank) %>
      </div>
      <div class="span6">
        <h2><%= t('.stay_tuned.header') %></h2>

        <p><%= t('.stay_tuned.text') %></p>
        <ul class="">
          <% @elections_coming_up.each do |election| %>
            <li><%= "#{election.name} (#{l election.election_at})" %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <h3><%= t('.want_help.header') %></h3>
        <%= simple_format(t('.want_help.text')) %>
      </div>
    </div>
  <% else %>

    <h2><%= t('.no_elections.header') %></h2>
    <%= simple_format(t('.no_elections.text')) %>

