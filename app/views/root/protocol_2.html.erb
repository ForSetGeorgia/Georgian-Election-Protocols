<% title t('.title') %>


<% if @crowd_datum.blank? %>
  <p>
    <%= t('.no_protocols') %>  
  </p>

<% else %>

  <div id="protocol-form-container">

    <p>
      <%= t('.p1') %>
    </p>

    <%= image_tag @crowd_datum.image_path, :id => 'protocolimg' %>

    <%= semantic_form_for @crowd_datum, :url => protocol_path do |f| %>
      <%= f.inputs do %>
        <%= f.input :district_id, :as => :hidden %>
        <%= f.input :precinct_id, :as => :hidden %>
        <%= f.input :user_id, :as => :hidden %>

        <%  [
              [1, :possible_voters],
              [2, :special_voters],
              ['3ა (12:00)', :votes_by_1200],
              ['3ბ (17:00)', :votes_by_1700],
              [4, :ballots_signed_for],
              [5, :ballots_available],
              [1, :party_1],
              [2, :party_2],
              [3, :party_3],
              [4, :party_4],
              [5, :party_5],
              [6, :party_6],
              [7, :party_7],
              [8, :party_8],
              [9, :party_9],
              [10, :party_10],
              [11, :party_11],
              [12, :party_12],
              [13, :party_13],
              [14, :party_14],
              [15, :party_15],
              [16, :party_16],
              [17, :party_17],
              [18, :party_18],
              [19, :party_19],
              [20, :party_20],
              [21, :party_21],
              [22, :party_22],
              [41, :party_41],
              [6, :invalid_ballots_submitted]
            ].each_with_index do |x, i| %>

          <% if i == 2 %>
            <div class="inline clearfix">
          <% elsif i == 4 %>
            </div>
          <% end %>


          <div class="m m<%= i + 1 %>">
            <%= f.input x[1], :label => x[0].to_s, :as => :string %>
          </div>
        <% end %>



      <% end %>

      <%= f.actions do %>
        <%= f.action :submit, :as => :input %>
      <% end %>
  <% end %>

  </div>
<% end %>
